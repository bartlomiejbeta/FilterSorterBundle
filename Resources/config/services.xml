<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<services>
		<service id="filter.query.manager" class="BartB\FilterSorterBundle\Filter\FilterQueryManager">
		</service>
		<service id="sort.param_converter" class="BartB\ParamConverter\SortParamConverter">
			<tag name="request.param_converter" priority="-1" converter="sort"/>
		</service>
		<service id="filter.param_converter" class="BartB\ParamConverter\FiltersParamConverter">
			<argument type="service" id="serializer"/>
			<tag name="request.param_converter" priority="-1" converter="filter"/>
		</service>
	</services>
</container>
